<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmekPos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EmekPos"
    Shell.FlyoutBehavior="Flyout"
    Title="EmekPos">

    <ShellContent
        Title="Satış Sayfası"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Kayıt Sayfası"
        ContentTemplate="{DataTemplate local:UrunKayit}"
        Route="UrunKayit" />
    <ShellContent
    Title="Stoklarım"
    ContentTemplate="{DataTemplate local:stokTakip}"
    Route="stokTakip" />
    <ShellContent
        Title="Geçmiş Satışlarım"
        ContentTemplate="{DataTemplate local:SatisGecmisi}"
        Route="SatisGecmisi" />
    <ShellContent
        Title="Yedekleme Sayfası"
        ContentTemplate="{DataTemplate local:Yedekleme}"
        Route="Yedekleme" />
    
</Shell>
  